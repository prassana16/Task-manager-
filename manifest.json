{
    "manifest_version": 3,
    "name": "My Next.js Chrome Extension",
    "version": "1.0",
    "description": "A Chrome extension built with the Next.js App Router",
    "action": {
      "default_popup": "out/popup/index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  